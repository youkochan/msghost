:host {
  position: absolute;
  width: 100%;
  height: 100%;
}

.wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wrapper .h1 {
  width: 80%;
  text-align: center; 
  font-size: 26px;
  font-weight: bold;
  margin-bottom: 20px;
}

.wrapper .h2 {
  width: 80%;
  text-align: center; 
  font-size: 16px;
  color: #999;
  margin-bottom: 20px;
}

.wrapper .btn {
  margin-top: 30px;
  padding: 0;
  background-color: rgb(45, 194, 0);
  height: 60px;
  line-height: 60px;
  border-radius: 30px;
  color: #eee;
  box-shadow: 0px 5px 10px rgba(45, 194, 0, 0.9);
  margin-bottom: 120px;
}