.container {
  padding-left: 20px;
  padding-right: 20px;
}

.container .avatar {
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin-bottom: 20px;
  box-shadow: 0px 2px 10px #ddd;
}

.container .name {
  font-size: 24px;
  margin-bottom: 10px;
  text-shadow: 0px 2px 10px #ddd;
}

.container .row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.container .row .cell {
  flex: 1;
  height: 100px;
  padding: 10px;
  overflow: hidden;
}

.container .row .cell .wrapper {
  width: 100%;
  height: 100%;
  border: 1px solid #ddd;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 3px 8px -1px #ddd;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .row .cell .wrapper text {
  width: 100%;
  text-align: center;
}

.container .row .cell .wrapper text:first-child {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}

.container .row .cell .wrapper text:last-child {
  font-weight: bold;
  font-size: 22px;
}